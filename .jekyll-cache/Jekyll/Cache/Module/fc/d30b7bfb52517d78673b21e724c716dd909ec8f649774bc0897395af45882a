          <span class="o">{</span>
              _navigation.InsertPageBefore<span class="o">(</span>page, before<span class="o">)</span><span class="p">;</span>
          <span class="o">})</span><span class="p">;</span>
    <span class="o">}</span>
 
    public Task&lt;Page&gt; PopAsync<span class="o">()</span>
